<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:id="@+id/relativeCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorCard"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imgIcon"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/icon_plan" />

            <TextView
                android:id="@+id/txtGoalName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/imgIcon"
                android:text="Goal Name"
                android:textColor="@color/colorWhite"
                android:textAppearance="?android:textAppearanceLarge" />

            <TextView
                android:id="@+id/txtDescJangkaWaktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtGoalName"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/imgIcon"
                android:textColor="@color/colorWhite"
                android:text="Jangka waktu: "
                android:textAppearance="?android:textAppearanceMedium" />

            <TextView
                android:id="@+id/txtJangkaWaktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtGoalName"
                android:layout_toRightOf="@id/txtDescJangkaWaktu"
                android:textColor="@color/colorWhite"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="47"
                android:textAppearance="?android:textAppearanceMedium"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtGoalName"
                android:layout_toRightOf="@id/txtJangkaWaktu"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="5dp"
                android:text="bulan"
                android:textAppearance="?android:textAppearanceMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDescCurrentCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtJangkaWaktu"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/imgIcon"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="5px"
                android:text="Biaya : "
                android:textAppearance="?android:textAppearanceMedium" />

            <TextView
                android:id="@+id/txtCurrentCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtJangkaWaktu"
                android:layout_toRightOf="@id/txtDescCurrentCost"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorWhite"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="1000000"
                android:textAppearance="?android:textAppearanceMedium"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txtGoalName"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/txtGoalName"
                    android:background="@drawable/ic_more_vert_black" />
            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>